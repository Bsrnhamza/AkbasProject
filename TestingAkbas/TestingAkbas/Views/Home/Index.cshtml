@*
    Bu view, hoş geldiniz sayfasının içeriğini içerir.
*@

@{
    ViewData["Title"] = "Hoş Geldiniz";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow: hidden;
            font-family: 'Arial', sans-serif;
        }

        .video-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }
        .icon-overlay {
            position: absolute;
            bottom: 0px; /* Alt kısımdan 20px mesafe */
            left: 20px; /* Sol kısımdan 20px mesafe */
            transform: translate(0, 0); /* Konumlandırma ile ilgili transformasyonu kaldır */
            color: rgb(255, 255, 255); /* Yarı opak beyaz renk */
            font-size: 1rem; /* İkon boyutunu ayarla */
        }

    </style>
</head>
<body>
    <video class="video-background" autoplay muted loop>
        <source src="https://www.akbaslar.com/videos/akbaslar.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="icon-overlay">
        <img src="~/img/akbasWhiteFont.png" alt="Logo">
    </div>
</body>
</html>
